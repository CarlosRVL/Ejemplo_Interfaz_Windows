<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Script Extendido WPF" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="*"/>    </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="10"/>   <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Origen copia:" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <TextBox Name="OrigenCopiaTextBox" Grid.Row="0" Grid.Column="1" Height="25" Margin="0,5,0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Destino copia:" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <TextBox Name="DestinoCopiaTextBox" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,5,0,5"/>

        <CheckBox Name="ForceExecutionCheckBox" Grid.Row="2" Grid.Column="1" Content="Forzar ejecuciÃ³n (Ignorar errores)" Margin="0,5,0,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Nivel de Log:" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <ComboBox Name="LogLevelComboBox" Grid.Row="3" Grid.Column="1" Height="25" Margin="0,5,0,5" SelectedIndex="0">
            <ComboBoxItem Content="Info"/>
            <ComboBoxItem Content="Advertencia"/>
            <ComboBoxItem Content="Error"/>
        </ComboBox>
        
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5,0,5">
            <Button Name="RunButton" Content="Ejecutar Tarea" Width="120" Height="30" Margin="0,0,10,0"/>
            <Button Name="ClearButton" Content="Limpiar Salida" Width="120" Height="30"/>
        </StackPanel>

        <Label Grid.Row="6" Grid.Column="0" Content="Registro de Salida:" VerticalAlignment="Top" Margin="0,5,10,5"/>
        <TextBox Name="OutputTextBox" Grid.Row="6" Grid.Column="1" IsReadOnly="True"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" Margin="0,5,0,5"/>
    </Grid>
</Window>
