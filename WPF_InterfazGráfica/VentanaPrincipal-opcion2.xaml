<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejecutor de Comandos WPF" Height="450" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name="RunButton" Content="Ejecutar Script" Grid.Row="0"
                HorizontalAlignment="Left" Width="120" Margin="0,0,0,10"/>

        <TextBox Name="OutputTextBox" Grid.Row="1" IsReadOnly="True"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
